<% layout("/layouts/boilerplate") %>
<body>
  <div class="row">
    <div class="col-8 offset-2">
      <img src="<%= listing.image.url %>" class="show-img" alt="listing_img" />
      <ul>
        <h3><%= listing.title %></h3>
        <li><%= listing.description %></li>
        <li><%= listing.location %></li>
        <li><%= listing.country %></li>
        <br />
        <h4>&#8377;<%= listing.price.toLocaleString("en-IN") %></h4>
      </ul>
      <div class="form-btns">
        <form method="GET" action="/listings/<%= listing._id %>/edit">
          <button class="form-button">Edit</button>
        </form>
        <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
          <button class="form-button dlt-btn">Delete</button>
        </form>
      </div>

      <!-- Review Section -->
      <div class="container mt-5 mb-5" style="max-width: 500px">
        <h4 class="mb-4 text-center">Leave a Review</h4>

        <form
          method="POST"
          action="/listings/<%= listing._id %>/reviews"
          novalidate
          class="needs-validation"
        >
          <div class="mb-3">
            <label for="rating" class="form-label">Rating</label>
            <select
              class="form-select"
              id="rating"
              name="review[rating]"
              required
            >
              <option value="">Select your rating</option>
              <option value="5">★★★★★</option>
              <option value="4">★★★★☆</option>
              <option value="3">★★★☆☆</option>
              <option value="2">★★☆☆☆</option>
              <option value="1">★☆☆☆☆</option>
            </select>
          </div>

          <div class="mb-3">
            <label for="comment" class="form-label">Comment</label>
            <textarea
              class="form-control"
              id="comment"
              name="review[comment]"
              rows="4"
              placeholder="Write your feedback..."
              required
            ></textarea>
            <div class="invalid-feedback">write your review!</div>
          </div>

          <div class="d-grid">
            <button type="submit" class="btn btn-primary">Submit Review</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</body>
